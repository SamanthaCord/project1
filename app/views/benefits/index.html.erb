    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <li class="benefitsubheading"><%= link_to benefit.name, benefit_path(benefit.id), :class => 'benefitsubheading' %></li>
      </div>
    </div>
    </ul>
  <% end %>
</div>

