<%= form_for @benefit do | f | %>
<fieldset>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :placeholder => 'Immunity' %>
</fieldset>
<label></label>
<fieldset>
  <%= f.submit "Update Item" %>
</fieldset>
<% end %>

<%= button_to 'Delete Item', @benefit, :method => 'delete', :data => { :confirm => 'Are you sure? This item will be deleted forever'} %>
