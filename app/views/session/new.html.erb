
<div class="row" id="logincontainer">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="loginlogo"><%= link_to 'BR', root_path, :class => "loginlogo" %></h1>
    <h1 class="loginheading">Admin Log In</h1>
  </br>
    <%= flash[:error] %>

    <%= form_tag login_path, :class => 'loginform' do %>
      <%= label_tag :email %>
      <%= email_field_tag :email %>
  </br>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
  </br>
      <%= submit_tag "ENTER", :class => 'loginbutton' %>
    <% end %>
  </div>
</div>

