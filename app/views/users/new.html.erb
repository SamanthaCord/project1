<div class="row" id="signupcontainer">
  <div class="col-md-11">
    <h1 class="loginlogo"><%= link_to 'BR', root_path, :class => "loginlogo" %></h1>
    <h1 class="loginheading">Add Admin User</h1>
</br>
    <% if @user.errors.any? %>
    <ol>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ol>
    <% end %>

    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create User", :class => 'createuserbutton' %>
    <% end %>
  </div>
</div>

